append config
    - var Page = {title:"HTML Templates Index",section:"Index",theme:""}
    - var Meta = {description:"",keywords:""}
    - var Basepath = {path:''}
doctype html
html
  head
    title Shangri-La - Index
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="description", content=Meta.description)
    meta(name="keywords", content=Meta.keywords)
    meta(name="HandheldFriendly", content="True")
    meta(name="MobileOptimized", content="320")
    meta(name="format-detection", content="telephone=no")
    meta(name="viewport", content="width=device-width,initial-scale=1.0,maximum-scale=1.0")
    // to avoid stripping of previous line
    <!--build:js #{Basepath.path}content/js/jquery-1.10.2.min.js-->
    script(src= Basepath.path + "content/js/vendors/jquery-1.10.2.min.js")
    // endbuild

    style.
      body {
        font-family: arial, helvetica, sans-serif;
      }
      .wrapper {
        border: 1px solid #aaa;
        border-radius: 5px;
        margin-bottom: 30px;
      }
      h1 {
        font-size: 22px;
        text-align: center;
      }
      h2 {
        font-size: 16px;
        padding: 10px 20px;
        background-color: #ddd;
        margin:0;
        border-bottom: 1px solid #aaa;
      }
      li > a {
        font-size: 12px;
        color: #00f;
      }

  body
    h1 Shangri-La F&B
    .wrapper
      h2 Phase2 Pages
      ol#phase-2-pages
        //- li
        //-   a(href='page1.html' target="_blank") Page - 1
        //- li
        //-   a(href='page2.html' target="_blank") Page - 2
    
        script(type="text/javascript").
          $(document).ready(function(e) {
            $.ajax({
              url: 'json/phase2.json',
              type: 'GET',
              dataType: 'json',
              beforeSend: function () {

              },
              success: function (data) {
                for(var i=0; i<data.length; i++) {
                  if(!data[i].wip) {
                    var $li = "<li><a href='" + data[i].href + "' target='_blank'>" + data[i].name + "</a>";
                    $('#phase-2-pages').append($li);
                  }
                }
              },
              error: function () {
                  
              },
              complete: function() {
                  
              }
            });
          });

